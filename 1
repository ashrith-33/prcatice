#include <stdio.h>
int main()
{
    int N, countOfDigits = 0, temp = 0;
    printf("Enter a number: ");
    scanf("%d", &N);
    temp = N;
    while (temp != 0)
    {
        countOfDigits = countOfDigits + 1;
        temp = temp / 10;
    }
    int r, sum = 0;
    temp = N;
    while (temp > 0)
    {
        r = temp % 10;
        int power = 1;
        for (int i = 0; i < countOfDigits; i++)
        {
            power *= r;
        }
        sum += power;
        temp = temp / 10;
    }
    if (N == sum)
        printf("%d is an Armstrong Number.\n", N);
    else
        printf("%d is not an Armstrong Number.\n", N);

    return 0;
}
